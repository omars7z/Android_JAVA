<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jordan"
            android:textSize="100px"
            android:textColor="#d1c5"
            android:layout_marginLeft="50px"
            android:layout_marginTop="300px"
            />

        <ImageView
            android:id="@+id/im1"
            android:layout_width="200px"
            android:layout_height="200px"
            tools:src="@drawable/jordan"
            android:layout_marginLeft="800px"
            android:layout_marginTop="300px"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Palestine"
            android:textSize="100px"
            android:textColor="#d1c5"
            android:layout_marginLeft="50px"
            android:layout_marginTop="500px"
            />
        <ImageView
            android:id="@+id/im2"
            android:layout_width="200px"
            android:layout_height="200px"
            tools:src="@drawable/palestine"
            android:layout_marginLeft="800px"
            android:layout_marginTop="500px"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syria"
            android:textSize="100px"
            android:textColor="#d1c5"
            android:layout_marginLeft="50px"
            android:layout_marginTop="700px"
            />
        <ImageView
            android:id="@+id/im3"
            android:layout_width="200px"
            android:layout_height="200px"
            tools:src="@drawable/syria"
            android:layout_marginLeft="800px"
            android:layout_marginTop="700px"
            />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lebanon"
            android:textSize="100px"
            android:textColor="#d1c5"
            android:layout_marginLeft="50px"
            android:layout_marginTop="900px"
            />

        <ImageView
            android:id="@+id/im4"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginLeft="800px"
            android:layout_marginTop="900px"
            tools:src="@drawable/lebanon" />
</RelativeLayout>